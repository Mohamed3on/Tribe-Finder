{
  "manifest_version": 3,
  "name": "X (Twitter) Friend Locations",
  "short_name": "twitterFriendLocations",
  "version": "1.0.0",
  "description": "Find out where your X (formerly Twitter) friends are located",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "permissions": ["storage", "activeTab"],
  "content_scripts": [
    {
      "matches": ["https://*.twitter.com/*"],
      "run_at": "document_idle",
      "js": ["inject.js"]
    }
  ],
  "host_permissions": ["https://*.google.com/*", "https://*.twitter.com/*"],

  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
